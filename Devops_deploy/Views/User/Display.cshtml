<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Information</title>
    <style>
        /* CSS for styling the user information section */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #007bff;
        }

        .user-info {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

            .user-info p {
                margin: 5px 0;
            }

                .user-info p strong {
                    color: #007bff;
                }
    </style>
</head>
<body>
    <div class="container">
        <h2>User Information</h2>
        <div class="user-info">
            <p><strong>Name:</strong> <span id="userName">@Model.Name</span></p>
            <p><strong>Age:</strong> <span id="userAge">@Model.Age</span></p>
            <p><strong>Email:</strong> <span id="userEmail">@Model.Email</span></p>
            <p><strong>Mobile:</strong> <span id="userMobile">@Model.Mobile</span></p>
        </div>
    </div>

    <script>
        // JavaScript for adding interactivity
        // Example: Adding a button to update user information
        // Assuming jQuery is available

        $(document).ready(function () {
            // Function to update user information
            function updateUserInfo(name, age, email, mobile) {
                $('#userName').text(name);
                $('#userAge').text(age);
                $('#userEmail').text(email);
                $('#userMobile').text(mobile);
            }

            // Example: Adding click event to a button to update user information
            $('#updateButton').click(function () {
                var newName = prompt("Enter new name:");
                var newAge = prompt("Enter new age:");
                var newEmail = prompt("Enter new email:");
                var newMobile = prompt("Enter new mobile number:");

                if (newName && newAge && newEmail && newMobile) {
                    updateUserInfo(newName, newAge, newEmail, newMobile);
                }
            });
        });
    </script>
</body>
</html>
